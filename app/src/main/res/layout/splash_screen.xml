<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/splash_container" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/white">
    <ImageView
        android:id="@+id/angry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/angry"
        android:visibility="invisible"/>

    <!-- Repeat for excited, happy, sad, etc. with different IDs and positions (left/right) -->

    <ImageView
        android:id="@+id/iconsplash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/animated_logo"
        android:visibility="invisible"/>

</FrameLayout>